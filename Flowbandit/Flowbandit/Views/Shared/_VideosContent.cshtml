@using FlowService.DTOs.Videos

@model VideosDTO

<div id="#video-container" class="row text-center">
    @foreach (var video in Model.FeaturedContent)
    {   
        <div class="col-lg-3 col-md-4 col-sm-6 hero-feature">

            <div class="thumbnail videothumbnail">
                <a href="@Url.Action("Video", new { ID = video.VideoId })">
                    <img class="videoThumbnailImg" src="@video.ThumbnailUrl" alt="">
                </a>
                <div class="caption">
                    <h3>@video.Title
                        @if (false == video.IsVisible)
                        {
                            <span class="small">(hidden)</span>
                        }
                    </h3>
                    
                    @foreach (var tag in video.Tags)
                    {
                        <span><a href="#">@tag.Name</a></span>
                    }
                    <p>@video.Entry</p>
                    <p>
                        <a href="@Url.Action("Video", new { ID = video.VideoId })" class="btn btn-primary">Check it out Now!</a>
                    </p>
                </div>
            </div>

        </div>
    }
</div>
