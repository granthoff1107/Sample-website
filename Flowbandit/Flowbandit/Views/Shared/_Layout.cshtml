@using Flowbandit.Models;
@model FlowService.DTOs.Generic.BaseModel

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>

        <link href="~/Content/dist/css/bootswatch-slate.min.css" rel="stylesheet" />
        <link href="~/Content/dist/css/sb-admin-2.css" rel="stylesheet" />
        <link href="~/Content/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/Content/css/FlowCss/Flowbandit.css" rel="stylesheet" />

    </head>
    <body>
        <div id="wrapper">
            <!-- Navigation -->
            @Html.Partial("_NavigationBar", Model)
            <div id="page-wrapper">
                <!-- Page Heading -->
                @RenderBody()
            </div>
            <!-- /#page-wrapper -->
        </div>
        <input type="hidden" id="display-login" value="@LoginHelper.isAnon.ToString().ToLower()">

        <script src="~/Content/js/jquery-2.1.3.min.js"></script>
        <script src="~/Content/js/plugins/jQuery-ui-1.11.4/jquery-ui-1.11.4.min.js"></script>
        <script src="~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/Content/bower_components/metisMenu/dist/metisMenu.min.js"></script>
        <script src="~/Content/dist/js/sb-admin-2.js"></script>
        <script src="~/Scripts/jquery.icheck.min.js"></script>
        <script src="~/Content/js/FlowJS/Flowbandit.js"></script>
        <script src="~/Scripts/moment.min.js"></script>
        
        @if (false == LoginHelper.isAnon)
        {
            <script src="~/Content/js/FlowJS/messages.js"></script>
        }

        @RenderSection("AdditionalScripts", required: false)

    </body>

</html>
