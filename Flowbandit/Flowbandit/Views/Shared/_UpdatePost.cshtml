@model Flowbandit.Models.PostVM


<h1 class="page-header">
    Dashboard
    <small>Subheading</small>
</h1>
<ol class="breadcrumb">
    <li>
        <i class="fa fa-dashboard"></i>  <a href="#">#Tags</a>
    </li>
    <li class="active">
        <i class="fa fa-file"></i> #tag2
    </li>
</ol>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create a new post
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" id="newpostform" method="post" action="@Url.Action("NewPost")" enctype="multipart/form-data">
                            <input type="hidden" name="NewPost.ID" value="@Model.PostID">
                            <input type="hidden" name="NewPost.Created" value="@Model.Created">
                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control" type="text" name="NewPost.Title" placeholder="Make a catchy title" value="@Model.PostName">
                            </div>
                            <div class="form-group">
                                <label>Post</label>
                                <textarea class="form-control tinyMce" name="NewPost.Entry" placeholder="Tell us your story... " rows="12">@Model.Entry</textarea>
                            </div>

                            <div class="form-group">
                                <label>Tags</label>
                                <input class="form-control append-bottom" id="tagsac" placeholder="Tag Your Post">

                                <table class="table table-bordered table-condensed">
                                    <tbody id="suggestedtags">
                                        <tr>
                                            <th>Tags</th>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span id="tagtemplate" class="label bg-light-blue suggesttag hidden">Juggling<a class="closetag" href="#">&nbsp;<i class="fa fa-times white"></i></a></span>
                                                @foreach (var tag in Model.CurrentPost.TagsToPosts.Select(t => t.Tag))
                                                {
                                                    <span data-tagval="@tag.ID" class="label bg-light-blue suggesttag hidden">@tag.Name<a class="closetag" href="#">&nbsp;<i class="fa fa-times white"></i></a></span>
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                            <div class="row">

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>Upload Cover Photo</label>
                                        <input type="file" name="CoverPhoto">
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" checked="checked" name="NewPost.Visible" value="@Model.isVisible.ToString().ToLower()">&nbsp;Is Visible
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6" id="preview">



                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>