@using FlowService.DTOs.Posts
@model PostDTO

<input type="hidden" id="tags-url" value="@Url.Action("TagsAutocomplete", "Tags")">

<h1 class="page-header">
    Dashboard
    <small>Subheading</small>
</h1>
<ol class="breadcrumb">
    <li>
        <i class="fa fa-dashboard"></i>  <a href="#">#Tags</a>
    </li>
    <li class="active">
        <i class="fa fa-file"></i> #tag2
    </li>
</ol>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Create a new post
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" id="newpostform" method="post" action="@Url.Action("NewPost")" enctype="multipart/form-data">
                            <input type="hidden" name="NewPost.ID" value="@Model.PostId">
                            <input type="hidden" name="newPost.Content.Created" value="@Model.Created">
                            <input type="hidden" name="newPost.Content.Id" value="@Model.ContentId">
                            <input type="hidden" name="newPost.ContentId" value="@Model.ContentId">


                            <div class="form-group">
                                <label>Title</label>
                                <input class="form-control" type="text" name="NewPost.Content.Title" placeholder="Make a catchy title" value="@Model.Title">
                            </div>
                            <div class="form-group">
                                <label>Post</label>
                                <textarea class="form-control tinyMce" name="NewPost.Content.Entry" placeholder="Tell us your story... " rows="12">@Model.Entry</textarea>
                            </div>

                            @Html.Partial("_updateTags", Model.Tags)

                            @{
                                string isChecked = Model.IsVisible ? "checked='checked'" : "";
                            }

                            <div class="row">

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label>Upload Cover Photo</label>
                                        <input type="file" name="CoverPhoto">
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" @isChecked name="NewPost.Content.Visible" value="true">&nbsp;Is Visible
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                    <div class="col-lg-6" id="preview">
                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>