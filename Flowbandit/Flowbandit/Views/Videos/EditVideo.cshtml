@model Flowbandit.Models.VideoVM

@{
    ViewBag.Title = "EditVideo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section AdditionalScripts
{
    <script src="~/Scripts/tinymce/tinymce.js"></script>
    <script src="~/Content/js/FlowJS/Flowglobals.js"></script>
    <link rel="stylesheet" href="~/Content/css/FlowCss/bootstrap-jQuery-autocomplete.css">

    <script type="text/javascript">
        $(function () {
            TagsAutoComplete('#tagsac', '@Url.Action("TagsAutocomplete", "Videos")', DefaultAddTagsToTable);
            ActivateCloseTag();
            OverrideSubmitFormWithTags("#newvideoform", ".suggesttag");
            initTinyMce();
        });
    </script>

}

<div class="row">
    <div class="hidden"></div>
    <div class="col-lg-12">
        @Html.Partial("_updateVideo", Model)
    </div>
</div>