<div class="row">
    <!-- Blog Post Content Column -->
    <div class="col-lg-8">
        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Model.Title</h1>
        <!-- Author -->
        <p class="lead">
            by <a href="#">@Model.Owner</a>
        </p>
        @if (!LoginHelper.isAnon && LoginHelper.UserID == Model.OwnerId)
        {
            <form method="get" action="@Url.Action("EditVideo", new {ID = Model.VideoId})">
                <button type="submit" class="btn btn-default">Edit Video</button>
            </form>
        }
        <hr>
        <!-- Date/Time -->
        <p><span class="glyphicon glyphicon-time"></span> Posted on @Model.Created</p>
        <hr>
        <!-- Preview Image -->
        @if (Model.isVisible)
        {
        
            <div class="videoWrapper">
                <iframe src="@Model.VideoUrl" frameborder="0" allowfullscreen></iframe>
            </div>

            <hr>
        }
        <!-- Post Content -->
        <p> @Html.Raw(Model.Entry)</p>
        <hr>
        <!-- Blog Comments -->
        <!-- Comments Form -->
        <div class="well">
            <h4>Leave a Comment:</h4>
            <form role="form" method="post" action="@Url.Action("Comment")">
                <input type="hidden" name="NewComment.ContentId" value="@Model.ContentId">
                <div class="form-group">
                    <textarea class="form-control" name="NewComment.Comment" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>

            </form>
        </div>
        <hr>

        @Html.Partial("_Comment", @Model.Comments)

    </div>
    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">
        <!-- Blog Categories Well -->
